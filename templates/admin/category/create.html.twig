{% extends 'admin/base.html.twig' %}

{% block body %}
    <h2>Менеджер категорий</h2>
    {{ form_start(form) }}
        <div>
            {{ form_errors(form) }}
        </div>
        <div class="form-group">
            {{ form_label(form.parent, 'Дочерняя категория') }}
            {{ form_widget(form.parent, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.name, 'Имя категории') }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_row(form.submit, { 'label': 'Сохранить', 'attr': {'class': 'btn btn-default' } }) }}
    {{ form_end(form) }}
{% endblock %}
