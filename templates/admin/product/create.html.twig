{% extends 'admin/base.html.twig' %}

{% block body %}
    <h2>Менеджер товаров</h2>
    {{ form_start(form) }}
    <div>
        {{ form_errors(form) }}
    </div>
    <div class="form-group">
        {{ form_label(form.category, 'Категория') }}
        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.name, 'Имя товара') }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_row(form.submit, { 'label': 'Сохранить', 'attr': {'class': 'btn btn-default' } }) }}
    {{ form_end(form) }}
{% endblock %}
